{
  "compilerOptions": {
    "target": "es5", 
    "module": "es2015",
    "strict": true, 
    "esModuleInterop": true, 
    "sourceMap": true, 
    "outDir": "./dist", 
    "baseUrl": "./src",
    "moduleResolution":"node",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts" 
  ],
  "exclude": [
    "node_modules" 
  ]
}